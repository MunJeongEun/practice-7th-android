<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="25dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_music_cover_img_cardView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_music_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/album_cover_qwer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대관람차"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="7dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/item_music_cover_img_cardView"
        app:layout_constraintTop_toTopOf="@id/item_music_cover_img_cardView"/>

    <TextView
        android:id="@+id/singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QWER"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/item_music_cover_img_cardView"
        app:layout_constraintTop_toBottomOf="@id/title_tv"/>

    <ImageView
        android:id="@+id/btn_play_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/nugu_btn_play_32"
        app:layout_constraintEnd_toStartOf="@id/player_more_iv"
        app:layout_constraintTop_toTopOf="@id/player_more_iv"
        app:layout_constraintBottom_toBottomOf="@id/player_more_iv"/>

    <ImageView
        android:id="@+id/player_more_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_player_more"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_tv"
        app:layout_constraintBottom_toBottomOf="@id/singer_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>